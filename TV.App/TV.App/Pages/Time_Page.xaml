<UserControl
    x:Class="TV.App.Pages.Time_Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TV.App.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:TV.App.UserControls"
    mc:Ignorable="d">
    <StackPanel MaxWidth="800" Margin="50,0" HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <uc:TimeSetting Title="Auto Attach" HasToggle="True" IsChecked="True" />
        <uc:TimeSetting Title="Time Zone" HasText="True" HasToggle="False" IsChecked="True" Text="gmt +02:00, Eastern Eu..." />
        <uc:TimeSetting Title="Daylight Saving" HasToggle="True" />
        <uc:TimeSetting Title="24 Hours" HasToggle="True" />
        <uc:TimeSetting Title="More ..." HasToggle="True" />

    </StackPanel>
</UserControl>
